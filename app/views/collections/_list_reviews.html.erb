<div class="row">
  <div class="col-sm-12">

    <h3>User's Review</h3>
    <div class="row" id="reviews">

      <% collections.each do |collection| %>
        <% if !!collection.review %>

          <div class="col-sm-2">
            <%= link_to collection.user.name, user_collections_path(collection.user) %>
          </div>

          <div class="col-sm-10">
            <div class="bordered">

              <p><strong>Rating:</strong> <span id="<%= collection.id %>-rating"><%= collection.rating %></span></p>
              <p id="<%= collection.id %>-review"><%= collection.review %></p>

            </div>
          </div>

        <% end %>
      <% end %>

    </div>
  </div>
</div>
