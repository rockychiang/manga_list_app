<div class="row">
  <div class="col-sm-12">
    <h3>User's Review</h3>
    <% collections.each do |collection| %>
      <% if !!collection.review %>
        <div class="col-sm-2">
          <%= link_to collection.user.name, collection.user %>
        </div>
        <div class="col-sm-10">
          <div class="bordered">
            <p><strong>Rating:</strong> <%= collection.rating %></p>
            <p><%= collection.review %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
