<% if logged_in? %>
  <% if current_user.mangas.include?(manga) %>
    <button class="btn btn-default">In Collection</button>
  <% else %>
    <%= form_for current_user.collections.build, url: user_collections_path(current_user) do |f| %>
      <%= f.hidden_field :user_id %>
      <%= f.hidden_field :manga_id, value: manga.id %>
      <%= f.submit "Add to Collection", class: "btn btn-primary" %>
    <% end %>
  <% end %>
<% end %>
