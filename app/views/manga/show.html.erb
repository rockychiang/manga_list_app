<div class="row">
  <div class="col-sm-12">
    <h2><%= @manga.title %></h2>
  </div>
</div>

<div class="row">

  <div class="col-sm-9">
    <%= render '/collections/review_form', user: current_user, collection: @collection %>

    <div class="row">
      <div class="col-sm-12">
        <h3>User's Review</h3>
        <% @manga.collections.each do |collection| %>
          <% if !!collection.review %>
            <div class="col-sm-2">
              <%= link_to collection.user.name, collection.user %>
            </div>
            <div class="col-sm-10">
              <div class="bordered">
                <strong>Rating:</strong> <%= collection.rating %><br />
                <%= collection.review %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-3">
    <p>
      <strong>Rating</strong><br />
      <%= average_rating %>
    </p>

    <p>
      <strong>Author</strong><br />
      <%= link_to @manga.author.name, author_path(@manga.author) %>
    </p>

    <p>
      <strong>Status</strong><br />
      <%= @manga.status %>
    </p>

    <% if @manga.status == "Completed" %>
      <p>
        <strong>Volumes</strong><br />
        <%= @manga.volumes %>
      </p>

      <p>
        <strong>Chapters</strong><br />
        <%= @manga.chapters %>
      </p>
    <% end %>

    <p>
      <strong>Years Active</strong><br />
      <%= @manga.years_active %>
    </p>

    <p class="center">
      <%= render '/collections/add_button', manga: @manga %>
    </p>

  </div>
</div>
