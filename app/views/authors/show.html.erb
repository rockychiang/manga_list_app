<div class="row">
  <div class="sol-sm-12">
    <a href="#" id="js-previous-author" class="pull-left" data-id="<%= @author.id %>">&#8592; Previous Author</a>
    <a href="#" id="js-next-author" class="pull-right" data-id="<%= @author.id %>">Next Author &#8594;</a>
  </div>
</div>

<div class="row">
  <div class="col-sm-10">
    <h2 id="authorName"><%= @author.name %></h2>
  </div>

  <div class="col-sm-2">
    <h2><%= render '/manga/new_button', author: @author %></h2>
  </div>
</div>

<%= render 'manga/list_manga', mangas: @author.mangas %>

<script id="manga-template" type="text/x-handlebars-template">
  <div class="col-sm-4 center">
    <div class="bordered">
      <h3><a href="/manga/{{id}}">{{title}}</a></h3>
      <p>by <a href="" class="mangaAuthor">{{author.name}}</a></p>
      <p>Status: {{status}}</p>
    </div>
  </div>
</script>
